<div class="container" style="width: 50%">
  <div class="d-flex flex-column mt-3">
    <div class="row">
      <p class="col-4" style="color:#88556d">*必填欄位</p>
      <h1 class="display-5 ml-2">請修改你的支出</h1>
    </div>

    <form action="/records/{{ record._id }}?_method=PUT" method="POST">
      <div class="row mt-5">
        <label class="col-4 mt-2" for="name">
          <h2>名稱*:</h2>
        </label>
        <input name='name' type="text" value="{{ record.name }}" style="width:300px">
      </div>

      <div class="row mt-5">
        <label class="col-4 mt-2" for="date">
          <h2>日期*:</h2>
        </label>
        <input type="date" name='date' value="{{ record.date }}" style="width:300px">
      </div>

      <div class="row mt-5">
        <label class="col-4 mt-2" for="title">
          <h2>類別*:</h2>
        </label>
        <select class="mt-2" name="category" style="width:300px">
          <option>{{ record.category }}</option>
          <option>家居物業</option>
          <option>交通出行</option>
          <option>休閒娛樂</option>
          <option>餐飲食品</option>
          <option>其他</option>
        </select>
      </div>

      <div class="row mt-5">
        <label class="col-4 mt-2" for="amount">
          <h2>金額*:</h2>
        </label>
        <input name='amount' type="number" value="{{ record.amount }}" style="width:300px">
      </div>

      <div class="mt-5 ml-3 d-flex justify-content-center">
        <button class="btn btn-warning" type="submit">送出</button>
      </div>
    </form>

  </div>
</div>