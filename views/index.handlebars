<div class="container" style="width: 70%">
  <div class="d-flex flex-column mt-3" style="color:#88556d;">
    <div class="form-group d-flex justify-content-center">
      <label for="experience"></label>
      <select name="experience" id="experience" class="form-control-lg col-8">
        <option value="0">類別</option>
        <option value="1">1 - 3 年</option>
      </select>
    </div>
    <div class="col-4">
      <h4><strong>總金額:</strong></h4>
    </div>
    <div class="d-flex align-items-center flex-column my-3 mr-2">
      <h1 class="display-3">{{ totalAmount }}</h1>
    </div>

    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <i id="{{ this.icon }}" class="{{ this.icon }} fa-3x col-4"></i>
          <div class="d-flex flex-column ml-4">
            <h3 class="my-2 mx-1">{{ this.name }}</h3>
            <h5 class="my-2 mx-1">{{ this.date }}</h5>
          </div>
        </div>
        <div class="mx-auto">
          <h1>{{ this.amount }}</h1>
        </div>
        <div class="col-auto">
          <a class="btn btn-secondary" href="./expense-tracker/{{ this._id }}/edit">修改</a>
          <form action="./expense-tracker/{{ this._id }}/delete" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </li>
      {{/each}}
    </ul>

    <div class="d-flex justify-content-center my-3">
      <a class="btn btn-warning" href="./expense-tracker/new" role="button">新增支出</a>
    </div>
  </div>
</div>